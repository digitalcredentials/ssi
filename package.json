{
  "name": "@digitalcredentials/ssi",
  "description": "Typescript types for the W3C Verifiable Credentials Data Model.",
  "version": "3.0.1",
  "scripts": {
    "build": "npm run clear && tsc -d",
    "clear": "rimraf dist/*",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "npm run build",
    "prettier": "prettier src --write",
    "rebuild": "npm run clear && npm run build",
    "test": "npm run lint && npm run test-node",
    "test-node": "cross-env NODE_ENV=test TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/*.ts'"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "module": "dist/index.js",
  "browser": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.1.0",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "mocha": {
    "require": "ts-node/register",
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.ts"
  },
  "keywords": [
    "dcc"
  ],
  "engines": {
    "node": ">=16.0"
  },
  "author": {
    "name": "Digital Credentials Consortium",
    "url": "https://github.com/digitalcredentials/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalcredentials/vc-data-model"
  },
  "homepage": "https://github.com/digitalcredentials/vc-data-model",
  "bugs": "https://github.com/digitalcredentials/vc-data-model/issues"
}
