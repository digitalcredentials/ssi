{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "lib": ["es2020"],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*",
    ".eslintrc.js"
  ],
  "exclude": ["test", "node_modules", "dist"]
}
