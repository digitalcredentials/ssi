{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "lib": ["es2020"],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "types"
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "karma.conf.js",
    "types"
  ],
  "exclude": ["test", "node_modules", "dist", "types"]
}

